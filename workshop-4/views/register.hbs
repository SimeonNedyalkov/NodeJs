{{#if errors}}
<div class="error-container">
    {{#each errors}}
    <p>{{this}}</p>
    {{/each}}
</div>
{{/if}}
<section id="register-page">
    <div class="registerSection">
        <div class="info-register">
            <h2>"I hope you're pleased with yourselves. We could all have been killed â€” or worse, expelled. Now if you don't mind, I'm going to bed."</h2>
        </div>
        <form method="POST" class="registerForm">
            <h2>Register</h2>
            <ul class="noBullet">
                <li class="{{#if errors.email}}error{{/if}}">
                    <label for="email">Email:</label>
                    <input type="text" class="inputFields" id="email" name="email" value="{{data.email}}"/>
                </li>
                <li class="{{#if errors.password}}error{{/if}}">
                    <label for="password">Password:</label>
                    <input type="password" class="inputFields" id="password" name="password"/>
                </li>
                <li class="{{#if errors.RePassword}}error{{/if}}">
                    <label for="repeat-password">Repeat-Password:</label>
                    <input type="password" class="inputFields" id="repeat-password" name="RePassword"/>
                </li>
                <li id="center-btn">
                    <button id="join-btn">Register</button>
                </li>
            </ul>
        </form>
    </div>
</section>